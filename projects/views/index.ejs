<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Projects on which you are MANAGER</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <a href="/add" class="btn btn-sm btn-outline-secondary">+ New Project</a>
    </div>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <th scope="col">Start date</th>
        <th scope="col">End date</th>
        <th scope="col">Jobs done</th>
        <th scope="col" class="text-end">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% projects.forEach(element => { %>
      <tr class="align-middle">
        <td><%= element.name %></td>
        <td><%= element.description %></td>
        <td><%= element.price %></td>
        <td><%= element.startDate %></td>
        <td><%= element.endDate %></td>
        <td><%= element.jobsDone %></td>
        <td class="text-end">
          <div class="d-flex flex-row justify-content-end gap-2">
            <a
              href="/view/<%= element._id %>"
              type="button"
              class="btn btn-success btn-small"
              ><i class="bi bi-eye"></i> Show
            </a>
            <a
              href="/edit/<%= element._id %>"
              type="button"
              class="btn btn-primary btn-small"
              ><i class="bi bi-pencil"></i> Edit
            </a>
            <a
              href="/addMember/<%= element._id %>"
              type="button"
              class="btn btn-warning btn-small"
              >+ Add Member
            </a>

            <form
              action="/edit/<%= element._id %>?_method=DELETE"
              method="POST"
              class="position-relative"
            >
              <button type="submit" class="btn btn-danger btn-small">
                <i class="bi bi-person-x"></i>
                Delete
              </button>
            </form>
            <a
              href="/archive/<%= element._id %>"
              type="button"
              class="btn btn-warning btn-small"
              >Archive
            </a>
          </div>
        </td>
      </tr>

      <% }) %>
    </tbody>
  </table>
</div>
