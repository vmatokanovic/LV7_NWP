<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Edit: <%= project.name %></h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <a class="btn btn-sm btn-outline-secondary btn-danger" href="/otherProjects">Back</a>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active"><%= project.name %></li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
        <b>Last Updated: <%= new Date(project.updatedAt).toUTCString() %></b>
      <!-- <b>ProjectId: <%= project._id %></b> -->
    </div>
  </div>
</div>

<form action="/editMember/<%= project._id %>?_method=PUT" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="name">Project Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="<%= project.name %>"
        placeholder="Project name"
        required
        disabled
      />
    </div>

    <div class="col">
      <label for="price">Price</label>
      <input
        type="text"
        class="form-control"
        id="price"
        name="price"
        value="<%= project.price %>"
        placeholder="Price"
        required
        disabled
      />
    </div>
  </div>

    <div class="form-group mb-4">
        <label for="description">Description:</label>
        <textarea class="form-control" name="description" id="description" cols="30" rows="5" placeholder="Project description" disabled><%= project.description %></textarea>
    </div>  

  <div class="row form-group mb-4">
    <div class="col">
      <label for="startDate">Start Date</label>
      <input
        type="text"
        class="form-control"
        id="startDate"
        name="startDate"
        value="<%= project.startDate %>"
        placeholder="Start Date"
        required
        disabled
      />
    </div>

    <div class="col">
      <label for="endDate">End Date</label>
      <input
        type="text"
        class="form-control"
        id="endDate"
        name="endDate"
        value="<%= project.endDate %>"
        placeholder="End date"
        required
        disabled
      />
    </div>

    <div class="form-group mb-4">
        <label for="jobsDone">Jobs Done</label>
        <textarea class="form-control" name="jobsDone" id="jobsDone" cols="30" rows="12" placeholder="Jobs That Are Done"><%= project.jobsDone %></textarea>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-success">Update Project</button>
    </div>
</form>