<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Project</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <a class="btn btn-sm btn-outline-secondary btn-danger" href="/">Back</a>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active">New Project</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <!-- <b>ProjectId</b> -->
    </div>
  </div>
</div>

<form action="/addMember/<%= project._id %>?_method=PUT" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="name">Member Email</label>
      
      <select class="form-select" aria-label="Default select example" name="members">
        <option selected disabled>Select member to add</option>
        <% users.forEach((user) => { %>
          <% if (project.members.includes(user.email)) { %>
            <option value="<%= user.email %>" disabled><%= user.email %> (Already a member)</option>
          <% } else { %>
            <option value="<%= user.email %>"><%= user.email %></option>
          <% } %>
        <% }) %>
      </select>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-success">Add Member</button>
    </div>



</form>
